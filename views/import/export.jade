extends ../layout

block content
    .row
        ol.breadcrumb
            li: a(href="/") Home
            li.active Export data

    h1 Export data

    form.form-horizontal(method="POST", enctype="multipart/form-data", action="/export", role="form")
        .form-group
            label.control-label.col-md-2(for="start") Start date
            .col-md-4
                input#start(type="date", name="start", value=(new Date()).toJSON().slice(0, 10))
        .form-group
            label.control-label.col-md-2(for="end") End date
            .col-md-4
                input#end(type="date", name="end", value=(new Date()).toJSON().slice(0, 10))
        .form-group
            .col-md-4.col-md-offset-2
                input.btn.btn-primary(type="submit", value="Export")